import funkin.modding.base.ScriptedFlxRuntimeShader;

class HeatwaveShader extends ScriptedFlxRuntimeShader {
    public function new() {
        super(Assets.getText(Paths.frag("Heatwave")));

        setFloat("time", 1.0);
    }

    public function update(elapsed:Float) {
        var currentTime = getFloat("time");
        setFloat("time", currentTime + elapsed);
    }
}